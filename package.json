  },
  "homepage": "https://github.com/kurgm/kage-engine#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "eslint": "^4.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  }
