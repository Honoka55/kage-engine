{
  "name": "kage-engine",
  "version": "1.0.0",
  "description": "An engine that generates glyph image file from KAGE data",
  "directories": {
    "doc": "docs"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:browser",
    "build:ts": "tsc",
    "build:browser": "mkdir -p dist && browserify lib/browser.js -o dist/kage.js",
    "clean": "rm lib/* dist/*",
    "lint": "eslint 'src/**/*.ts'",
    "test": "node test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurgm/kage-engine.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kurgm/kage-engine/issues"
  },
  "homepage": "https://github.com/kurgm/kage-engine#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "eslint": "^7.1.0",
    "typescript": "^3.9.5"
  }
}
